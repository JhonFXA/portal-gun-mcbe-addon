{
    "third_party_server_screen@common.base_screen": {
        "$screen_animations": [],
        "$background_animations": [],
        "force_render_below": true,
        "low_frequency_rendering": true,
        "render_only_when_topmost": false
    },

    "main_screen_content":{
        "modifications":[
            {
                "array_name": "controls",
                "operation": "insert_back",
                "value": [
                    {
                        "pg_server_form_factory": {
                            "type": "panel",
                            "factory": {
                                "name": "server_form_factory",
                                "control_ids": {
                                    "long_form": "@server_form.pg_form_panel"
                                }
                            }
                        }
                    }
                ]

            }
        ]
    },

    "long_form": {
        "modifications": [
            {
                "array_name": "bindings",
                "operation": "insert_back",
                "value": [
                    {
                        "binding_name": "#title_text"
                    },
                    {
                        "binding_type": "view",
                        "source_property_name": "((#title_text - 'Portal Gun Menu' - 'Prototype' - 'Synthesis Bench') = #title_text)",
                        "target_property_name": "#visible"
                    }
                ]
            }
        ]
    },
    "pg_form_panel":{
        "type": "panel",
        "bindings": [
            {
                "binding_name": "#title_text"
            }
        ],
        "controls":[
            {
                "standard_menu_form@standard_menu_form.menu": {
                    "layer": 2,
                    "bindings": [
                        {
                            "binding_type": "view",
                            "source_control_name": "pg_form_panel",
                            "source_property_name": "( not ((#title_text - 'Portal Gun Menu') = #title_text))",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "prototype_menu_form@prototype_menu_form.menu": {
                    "layer": 2,
                    "bindings": [
                        {
                            "binding_type": "view",
                            "source_control_name": "pg_form_panel",
                            "source_property_name": "( not ((#title_text - 'Prototype') = #title_text))",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "synthesis_form@synthesis_form.form": {
                    "layer": 2,
                    "close_on_player_hurt": true,
                    "bindings": [
                        {
                            "binding_type": "view",
                            "source_control_name": "pg_form_panel",
                            "source_property_name": "( not ((#title_text - 'Synthesis Bench') = #title_text))",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            }
        ]
    }
}