{
    "namespace": "synthesis_form",
    "custom_button": {
        "$default_button_background_texture|default": "textures/ui/presets/red_ore-ui_style/glass_pane",
        "$hover_button_background_texture|default": "textures/ui/presets/red_ore-ui_style/glass_pane_hover",
        "$pressed_button_background_texture|default": "textures/ui/presets/red_ore-ui_style/button_black_hover",
        "$button_size|default": [
        64,
        64
        ],
        "$button_offset|default": [
        0,
        0
        ],
        "$icon_size|default": [
        45,
        45
        ],
        "$icon_offset|default": [
        0,
        -5
        ],
        "$text_offset|default": [
        0,
        -8
        ],
        "$font_size|default": 1,
        "$font_type|default": "MinecraftRegular",
        "$shadow|default": false,
        "$text_alignment|default": "left",
        "$color|default": [1,1,1],
        "$show_hover_text|default": true,
        "type": "panel",
        "size": "$button_size",
        "anchor_from": "top_left",
        "anchor_to": "top_left",
        "controls": [
        {
            "panel_name": {
            "type": "panel",
            "size": "$button_size",
            "offset": "$button_offset",
            "anchor_from": "top_left",
            "anchor_to": "top_left",
            "bindings": [
                {
                "binding_type": "view",
                "source_control_name": "image",
                "resolve_sibling_scope": true,
                "source_property_name": "(not (#texture = ''))",
                "target_property_name": "#visible"
                }
            ],
            "controls": [
                {
                "image": {
                    "anchor_from": "top_left",
                    "anchor_to": "top_left",
                    "type": "image",
                    "layer": 200,
                    "size": "$icon_size",
                    "offset": "$icon_offset",
                    "bindings": [
                    {
                        "binding_name": "#form_button_texture",
                        "binding_name_override": "#texture",
                        "binding_type": "collection",
                        "binding_collection_name": "form_buttons"
                    },
                    {
                        "binding_name": "#form_button_texture_file_system",
                        "binding_name_override": "#texture_file_system",
                        "binding_type": "collection",
                        "binding_collection_name": "form_buttons"
                    },
                    {
                        "binding_type": "view",
                        "source_property_name": "(not ((#texture = '') or (#texture = 'loading')))",
                        "target_property_name": "#visible"
                    }
                    ]
                }
                },
                {
                "text": {
                    "anchor_from": "top_left",
                    "anchor_to": "top_left",
                    "type": "label",
                    "text": "#form_button_text",
                    "font_type": "$font_type",
                    "font_scale_factor": "$font_size",
                    "layer": 7,
                    "text_alignment": "$text_alignment",
                    "color": [0, 1, 1],
                    "shadow": "$shadow",
                    "offset": "$text_offset",
                    "bindings": [
                    {
                        "binding_name": "#form_button_text",
                        "binding_type": "collection",
                        "binding_collection_name": "form_buttons"
                    }
                    ]
                }
                }
            ]
            }
        },
        {
            "form_button@common_buttons.light_content_button": {
                "$default_button_texture": "$default_button_background_texture",
                "$hover_button_texture": "$hover_button_background_texture",
                "$pressed_button_texture": "$pressed_button_background_texture",
                "$default_state_border_visible": false,
                "$hover_state_border_visible": false,
                "$pressed_state_border_visible": false,
                "$pressed_button_name": "button.form_button_click",
                "offset": "$button_offset",
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "size": "$button_size",
                "$button_text": "#null",
                "$button_text_binding_type": "collection",
                "$button_text_grid_collection_name": "form_buttons",
                "$button_text_max_size": [
                    "100%",
                    20
                ],
                "variables": [
                    {
                    "requires": "($show_hover_text)",
                    "$button_content": "default_namespace.hover_text_panel"
                    }
                ],
                "bindings": [
                    {
                    "binding_type": "collection_details",
                    "binding_collection_name": "form_buttons"
                    }
                ]
            }
        }
        ],
        "bindings": [
            {
                "binding_name": "#form_button_text",
                "binding_type": "collection",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not (#form_button_text = '') )",
                "target_property_name": "#visible"
            }
        ]
    },

    "form": {
        "offset": [0, 0],
        "size": ["100%", "100%"],
        "layer": 0,
        "type": "panel",
        "anchor_from" : "top_left",
        "anchor_to" : "top_left",
        "bindings": [],
        "controls": [
            {
                "bg-image": {
                    "type":"image",
                    "offset": [0, 0],
                    "layer": 1,
                    "size":[540, 300],
                    "texture":"textures/ui/sb_ui/background",
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "bindings": [],
                    "controls": [
                        {
                            "mw-image": {
                              "type":"image",
                              "texture":"textures/ui/sb_ui/table",
                              "size":[200,200],
                              "offset": [0, 0],
                              "anchor_from": "center",
                              "anchor_to": "center"
                            }
                        },
                        {
                            "rick-image": {
                                "type": "image",
                                "texture": "textures/ui/sb_ui/rick_formula",
                                "size": [120, 120],
                                "offset": [-180, 60],
                                "anchor_from": "center",
                                "anchor_to": "center"
                            }
                        },
                        {
                            "speech-label": {
                                "type": "label",
                                "offset": [-70, 105],
                                "anchor_from": "center",
                                "anchor_to": "center",                                
                                "text": "#form_text",
                                "shadow": true,
                                "bindings": [
                                    {
                                        "binding_name": "#form_text"
                                    }
                                ],
                                "font_type": "MinecraftRegular",
                                "font_scale_factor": 0.7
                            }
                        },
                        {
                            "info-label": {
                                "type": "label",
                                "offset": [-180, -76],
                                "text": "Portal fluid is an extremely \nunstable and hazardous \nsubstance. Incorrect \ncalculations may result in \nsevere bodily harm, \ndimensional corruption, or \ncomplete molecular \ndisintegration. BE CAREFUL!",
                                "shadow": true,
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "color": [1,1,0],
                                "bindings": [],
                                "font_type": "MinecraftRegular",
                                "font_scale_factor": 1
                            }
                        },
                        {
                            "collection_panel": {
                                "offset": [0, 0],
                                "size": [250, 250],
                                "type": "collection_panel",
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "collection_name": "form_buttons",
                                "bindings": [],
                                "controls": [
                                    {
                                        "solve_equations_btn@synthesis_form.custom_button": {
                                            "$default_button_background_texture": "textures/ui/sb_ui/paper",
                                            "$hover_button_background_texture": "textures/ui/sb_ui/paper_hover",
                                            "$pressed_button_background_texture": "textures/ui/sb_ui/paper_pressed",
                                            "$button_offset": [0, 20],
                                            "$button_size": [70, 70],
                                            "anchor_from": "center",
                                            "anchor_to": "center",
                                            "collection_index": 0,
                                            "$icon_offset": [34, 40],
                                            "$icon_size": [20, 20],
                                            "$font_size": 1,
                                            "$text_offset": [54, 50],
                                            "$font_type": "MinecraftRegular",
                                            "$shadow": true,
                                            "layer": 6,
                                            "$text_alignment": "center",
                                            "$show_hover_text": false,
                                            "bindings": []
                                        }
                                    },
                                    {
                                        "calibrate_fluid_btn@synthesis_form.custom_button": {
                                            "$default_button_background_texture": "textures/ui/sb_ui/microscope",
                                            "$hover_button_background_texture": "textures/ui/sb_ui/microscope_hover",
                                            "$pressed_button_background_texture": "textures/ui/sb_ui/microscope_pressed",
                                            "$button_offset": [-45, -50],
                                            "$button_size": [100, 100],
                                            "anchor_from": "center",
                                            "anchor_to": "center",
                                            "collection_index": 1,
                                            "$icon_offset": [34, 10],
                                            "$icon_size": [50, 20],
                                            "$text_offset": [79, 6],
                                            "$font_size": 1,
                                            "$font_type": "MinecraftRegular",
                                            "$shadow": true,
                                            "layer": 6,
                                            "$text_alignment": "center",
                                            "$show_hover_text": false,
                                            "bindings": []
                                        }                           
                                    },
                                    {
                                        "colored_tubes_image": {
                                            "type":"image",
                                            "texture":"textures/ui/sb_ui/colored_tubes",
                                            "offset": [30, -40],
                                            "size":[100, 100],
                                            "anchor_from": "center",
                                            "anchor_to": "center"
                                        }
                                    },
                                    {
                                        "liquid_image": {
                                            "type":"image",
                                            "texture":"textures/ui/sb_ui/liquid",
                                            "offset": [48, -15],
                                            "layer": 6,
                                            "size":[100, 100],
                                            "anchor_from": "center",
                                            "anchor_to": "center"
                                        }                                        
                                    },
                                    {
                                        "close-btn@synthesis_form.custom_button": { 
                                            "$default_button_background_texture": "textures/ui/sb_ui/close",
                                            "$hover_button_background_texture": "textures/ui/sb_ui/close_hover",
                                            "$pressed_button_background_texture": "textures/ui/sb_ui/close_hover",
                                            "$button_offset": [200, -100],
                                            "$button_size": [30, 30],
                                            "anchor_from": "center",
                                            "anchor_to": "center",
                                            "collection_index": 2,
                                            "$font_size": 1,
                                            "layer": 6,
                                            "bindings": []
                                        }
                                    }
                                ]                               
                            }
                        }
                    ]
                }
            },
            {
                "black-image": {
                    "type": "image",
                    "offset": [0, 0],
                    "layer": 0,
                    "size": [800, 800],
                    "texture": "textures/ui/sb_ui/bg",
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "bindings": []
                }
            }
        ]
    }
}