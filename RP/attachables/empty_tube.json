{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "ram_portalgun:empty_tube",
            "render_controllers": [
                "controller.render.empty_tube"
            ],
            "materials": {
                "default": "entity_alphatest",
                "tube": "entity_alphablend",
                "enchanted": "entity_alphatest_glint"
            },
            "textures": {
                "default": "textures/attachable/empty_tube",
                "enchanted": "textures/misc/enchanted_item_glint"
            },
            "geometry": {
                "default": "geometry.empty_tube"
            },
            "animations": {
                "first_person_hold": "animation.empty_tube.first_person_hold",
                "first_person_hold_offhand": "animation.empty_tube.first_person_hold_offhand",
                "third_person_hold": "animation.empty_tube.third_person_hold"
            },
            "scripts": {
                "pre_animation": [
					"v.main_hand = c.item_slot == 'main_hand';",
					"v.off_hand = c.item_slot == 'off_hand';"
				],
                "animate": [
                    {
						"first_person_hold": "v.main_hand && c.is_first_person"
					},
					{
						"first_person_hold_offhand": "v.off_hand && c.is_first_person"
					},
                    {
                        "third_person_hold": "!c.is_first_person"
                    }
                ]
            }
        }
    }
}