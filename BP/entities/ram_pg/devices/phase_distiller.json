{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "ram_pg:phase_distiller",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "properties": {
        "ram_pg:placed": {
          "type": "bool",
          "client_sync": true,
          "default": false
        }
      }
    },

    "components": {
      "minecraft:fire_immune": {},
      "minecraft:type_family": { "family": ["ram_pg:devices"] },
      "minecraft:physics": {},
      "minecraft:knockback_resistance": { "value": 1 },
      "minecraft:collision_box": { "width": 0, "height": 0 },
      "minecraft:custom_hit_test": {
        "hitboxes": [
          {
            "width": 0.5,
            "height": 0.6,
            "pivot": [0, 0.3, 0]
          }
        ]
      },
      "minecraft:health": { "value": 1, "max": 1 },
      "minecraft:entity_sensor": {
        "event_filters": {
          "test": "is_family",
          "subject": "other",
          "value": "ram_pg:devices"
        },
        "sensor_range": 0.15,
        "event": "ram_pg:break"
      },
      "minecraft:environment_sensor": {
        "triggers": [
          {
            "filters": {
              "any_of": [
                { "test": "in_lava", "value": true },
                { "test": "actor_health", "operator": "<=", "value": 0 },
                { "test": "taking_fire_damage", "value": true }
              ]
            },
            "event": "ram_pg:break"
          }
        ]
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  },
                  { "test": "has_damage", "subject": "self", "value": "attack" }
                ]
              },
              "event": "ram_pg:break"
            },
            "deals_damage": false
          },
          {
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test": "is_game_rule",
                    "domain": "mobGriefing",
                    "value": true
                  }
                ],
                "any_of": [
                  {
                    "test": "has_damage",
                    "subject": "self",
                    "value": "entity_explosion"
                  },
                  {
                    "test": "has_damage",
                    "subject": "self",
                    "value": "block_explosion"
                  }
                ]
              },
              "event": "ram_pg:break"
            },
            "deals_damage": false
          },

          {
            "cause": "all",
            "deals_damage": false
          }
        ]
      }
    },

    "component_groups": {
      "ram_pg:break": {
        "minecraft:mark_variant": { "value": 1 },
        "minecraft:collision_box": { "width": 0, "height": 0 },
        "minecraft:timer": {
          "time": 0.25,
          "time_down_event": {
            "event": "ram_pg:despawn",
            "target": "self"
          }
        }
      },
      "ram_pg:despawn": { "minecraft:instant_despawn": {} }
    },

    "events": {
      "ram_pg:placed": { "set_property": { "ram_pg:placed": true } },
      "ram_pg:break": { "add": { "component_groups": ["ram_pg:break"] } },
      "ram_pg:despawn": { "add": { "component_groups": ["ram_pg:despawn"] } }
    }
  }
}
